<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_out_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="Title"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView_out"
        android:layout_width="354dp"
        android:layout_height="266dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_out_title"
        app:layout_constraintStart_toStartOf="@+id/txt_out_title"
        app:layout_constraintTop_toBottomOf="@+id/txt_out_title"
        app:srcCompat="@mipmap/ic_launcher"
        tools:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txt_inference_rtval"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="inference result here: including number of counts and type of counts"
        app:layout_constraintEnd_toEndOf="@+id/imageView_out"
        app:layout_constraintStart_toStartOf="@+id/imageView_out"
        app:layout_constraintTop_toBottomOf="@+id/imageView_out"/>


    <Button
        android:id="@+id/button_back_to_outbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="BACK TO OUTBOX"
        app:layout_constraintEnd_toEndOf="@+id/txt_inference_rtval"
        app:layout_constraintStart_toStartOf="@+id/txt_inference_rtval"
        app:layout_constraintTop_toBottomOf="@+id/txt_inference_rtval"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>